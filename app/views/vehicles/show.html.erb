<div class="page-header">
  <h3>Vehicle #<%= @vehicle.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Year</dt>
      <dd><%= @vehicle.year %></dd>

      <dt>Make</dt>
      <dd><%= @vehicle.make %></dd>

      <dt>Model</dt>
      <dd><%= @vehicle.model %></dd>

      <dt>Color</dt>
      <dd><%= @vehicle.color %></dd>

      <dt>Nickname</dt>
      <dd><%= @vehicle.nickname %></dd>

      <dt>License plate</dt>
      <dd><%= @vehicle.license_plate %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/vehicles" class="btn btn-primary">
        Back
      </a>
      <a href="/vehicles/<%= @vehicle.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_vehicle/<%= @vehicle.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Vehicle has many resident_parking_permits -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Resident Parking Permits
      </li>

      <% @vehicle.resident_parking_permits.each do |resident_parking_permit| %>
        <li class="list-group-item">
          <a href="/resident_parking_permits/<%= resident_parking_permit.id %>">
            <%= resident_parking_permit.resident_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/resident_parking_permits/<%= resident_parking_permit.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/resident_parking_permits/<%= resident_parking_permit.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_resident_parking_permit/<%= resident_parking_permit.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A Vehicle has many pass_uses -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Pass Uses
      </li>

      <% @vehicle.pass_uses.each do |visit| %>
        <li class="list-group-item">
          <a href="/visits/<%= visit.id %>">
            <%= visit.vehicle_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/visits/<%= visit.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/visits/<%= visit.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_visit/<%= visit.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A Vehicle has many resident_car_owners -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Resident Car Owners
      </li>

      <% @vehicle.resident_car_owners.each do |user| %>
        <li class="list-group-item">
          <a href="/users/<%= user.id %>">
            <%= user.username %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/users/<%= user.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/users/<%= user.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_user/<%= user.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
