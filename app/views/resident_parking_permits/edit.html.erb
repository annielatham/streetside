<!-- Validation failure messages -->
<% if @resident_parking_permit.errors.any? %>
  <% @resident_parking_permit.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Resident Parking Permit #<%= @resident_parking_permit.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_resident_parking_permit/<%= @resident_parking_permit.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for resident_id -->
      <div class="form-group">
        <label for="resident_id" class="control-label">
          Resident
        </label>

        <%= select_tag(:resident_id, options_from_collection_for_select(User.all, :id, :username, @resident_parking_permit.resident_id), :class => "form-control") %>
      </div>

      <!-- Label and input for vehicle_id -->
      <div class="form-group">
        <label for="vehicle_id" class="control-label">
          Vehicle
        </label>

        <input type="text" id="vehicle_id" name="vehicle_id" placeholder="Vehicle" class="form-control" value="<%= @resident_parking_permit.vehicle_id %>">
      </div>

      <!-- Label and input for purchase_date -->
      <div class="form-group">
        <label for="purchase_date" class="control-label">
          Purchase date
        </label>

        <input type="text" id="purchase_date" name="purchase_date" placeholder="Purchase date" class="form-control" value="<%= @resident_parking_permit.purchase_date %>">
      </div>

      <!-- Label and input for expiration_date -->
      <div class="form-group">
        <label for="expiration_date" class="control-label">
          Expiration date
        </label>

        <input type="text" id="expiration_date" name="expiration_date" placeholder="Expiration date" class="form-control" value="<%= @resident_parking_permit.expiration_date %>">
      </div>

      <button class="btn btn-warning">
        Update Resident Parking Permit
      </button>
      or
      <a href="/resident_parking_permits/<%= @resident_parking_permit.id %>">Cancel</a>
    </form>
  </div>
</div>
