<!-- Validation failure messages -->
<% if @resident_parking_permit.errors.any? %>
  <% @resident_parking_permit.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Resident Parking Permit</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_resident_parking_permit" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for resident_id -->
      <input type="hidden" name="resident_id" value="<%= current_user.id %>">

      <!-- Label and input for vehicle_id -->
      <div class="form-group">
        <label for="vehicle_id" class="control-label">
          Vehicle
        </label>

        <%= select_tag(:vehicle_id, options_from_collection_for_select(Vehicle.all, :id, :nickname, @resident_parking_permit.vehicle_id), :class => "form-control") %>
      </div>

      <!-- Label and input for valid_date -->
      <div class="form-group">
        <label for="valid_date" class="control-label">
          Valid beginning
        </label>

        <input type="text" id="purchase_date" name="purchase_date" placeholder="Purchase date" class="form-control" value="<%= @resident_parking_permit.purchase_date %>">
      </div>

      <!-- Label and input for expiration_date -->
      <div class="form-group">
        <label for="expiration_date" class="control-label">
          Expiration date
        </label>

        <input type="text" id="expiration_date" name="expiration_date" placeholder="Expiration date" class="form-control" value="<%= @resident_parking_permit.expiration_date %>">
      </div>

      <button class="btn btn-info">
        Create Resident Parking Permit
      </button>
      or
      <a href="/resident_parking_permits">Cancel</a>
    </form>
  </div>
</div>
