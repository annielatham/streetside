<div class="page-header">
  <h3>Visit #<%= @visit.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Vehicle</dt>
      <dd>
        <% if @visit.visiting_vehicle.present? %>
          <a href="/vehicles/<%= @visit.vehicle_id %>">
            <%= @visit.visiting_vehicle.nickname %>
          </a>
        <% end %>
      </dd>

      <dt>Permit</dt>
      <dd>
        <% if @visit.visitor_permit.present? %>
          <a href="/visitor_parking_permits/<%= @visit.permit_id %>">
            <%= @visit.visitor_permit.resident_id %>
          </a>
        <% end %>
      </dd>

      <dt>Start time</dt>
      <dd><%= @visit.start_time %></dd>

      <dt>End time</dt>
      <dd><%= @visit.end_time %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/visits" class="btn btn-primary">
        Back
      </a>
      <a href="/visits/<%= @visit.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_visit/<%= @visit.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Visit has many resident_host -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Resident Host
      </li>

      <% @visit.resident_host.each do |user| %>
        <li class="list-group-item">
          <a href="/users/<%= user.id %>">
            <%= user.username %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/users/<%= user.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/users/<%= user.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_user/<%= user.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
