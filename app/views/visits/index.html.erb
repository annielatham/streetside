<div class="page-header">
  <h1>
    Visits
    <a href="/visits/new" class="btn btn-lg btn-success">New Visit</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Vehicle</th>
        <th>Permit</th>
        <th>Start time</th>
        <th>End time</th>
        <th>Actions</th>
      </tr>

      <% @visits.each do |visit| %>
      <tr>
        <td>
          <% if visit.visiting_vehicle.present? %>
            <a href="/vehicles/<%= visit.visiting_vehicle.id %>">
              <%= visit.visiting_vehicle.nickname %>
            </a>
          <% end %>
        </td>
        <td>
          <% if visit.visitor_permit.present? %>
            <a href="/visitor_parking_permits/<%= visit.visitor_permit.id %>">
              <%= visit.visitor_permit.resident_id %>
            </a>
          <% end %>
        </td>
        <td><%= visit.start_time %></td>
        <td><%= visit.end_time %></td>
        <td>
          <a href="/visits/<%= visit.id %>" class="btn btn-primary">Show</a>
          <a href="/visits/<%= visit.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_visit/<%= visit.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @visits, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
