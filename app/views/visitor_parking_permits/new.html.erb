<!-- Validation failure messages -->
<% if @visitor_parking_permit.errors.any? %>
  <% @visitor_parking_permit.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Activate New Visitor Parking Permit</h3>
</div>

<div>
<div class="jumbotron">
  <div class="col-md-12">
    <form action="/create_visitor_parking_permit" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for resident_id -->
      <input type="hidden" name="resident_id" value="<%= current_user.id %>">

      <!-- Label and input for valid_date -->
      <input type="hidden" name="valid_date" value="2018-1-1">

      <!-- Label and input for expiration_date -->
        <input type="hidden" name="expiration_date" value="2018-12-31">
      </div>

      <!-- Label and input for activation code -->
      <div class="form-group">
        <label for="activation_code" class="control-label">
          Activation Code
        </label>

        <input type="text" id="activation_code" name="activation_code" placeholder="Enter the permit code provided by your city" class="form-control" value="<%= @visitor_parking_permit.expiration_date %>">
      </div>

      <button class="btn btn-success">
        Submit
      </button>
      or
      <a href="/visitor_parking_permits">Cancel</a>
    </form>
  </div>
</div>
</div>

